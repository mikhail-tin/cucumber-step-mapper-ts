{
    "name": "cucumber-mapper",
    "displayName": "Cucumber-mapper",
    "description": "map step and step definition",
    "version": "0.0.1",
    "publisher": "Mikhail-tin",
    "license": "ICS",
    "repository": {
        "type": "git",
        "url": "git@github.com:mikhail-tin/cucumber-step-mapper-ts.git"
    },
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.goToDef"
    ],
    "configuration": {
      "title": "Cucumber step mapper",
      "properties": {
        "cucumber-step-mapper.srcTsPath": {
          "type": "string",
          "default": "src",
          "description": "Relative path to step definition files, 'src' as default"
        }
      }
    },
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
        {
            "command": "extension.goToDef",
            "title": "Go to step definition"
        }],
         "keybindings": [
            {
                "command": "extension.goToDef",
                "key": "ctrl+f1"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}